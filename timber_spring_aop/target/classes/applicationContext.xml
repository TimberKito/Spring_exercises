    <aop:config>
        <!-- 公共切入点 -->
        <aop:pointcut id="pt" expression="execution(* *(..))"/>
        <aop:aspect ref="myAdvice">
            <!-- 局部切入点 -->
            <aop:pointcut id="pt2" expression="execution(* *(..))"/>
            <!--<aop:before method="before" pointcut-ref="pt2"/>-->
            <aop:before method="before" pointcut="execution(* *(..))"/>
        </aop:aspect>
    </aop:config>


